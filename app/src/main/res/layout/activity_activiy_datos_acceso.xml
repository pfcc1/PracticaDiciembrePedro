<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActiviyDatosAcceso">

        <ImageView
            android:id="@+id/imageViewAcceso"
            android:layout_width="231dp"
            android:layout_height="187dp"
            android:layout_marginStart="119dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="107dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/editTextTextContraseñaAcceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="100dp"
            android:ems="10"
            android:hint="@string/contrasena"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAcceso" />

        <Button
            android:id="@+id/buttonAcceso"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="158dp"
            android:foreground="@drawable/acceso"
            android:text="Acceso"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextContraseñaAcceso" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>